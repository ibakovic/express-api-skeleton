<html>
  <head>
    <title></title>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
   	<script src="/javascripts/angularApp.js"></script>
  </head>

  <body ng-app="movie" ng-controller="MainCtrl">
    <div>
    <ui-view></ui-view>
      {{test}}

	<div ng-repeat="post in posts">
		<hr>
		<a ng-show="post.link" href="{{post.link}}">
    		{{post.title}}
  		</a>
  		<span ng-hide="post.link">
    		{{post.title}}
  		</span>
        <br>
        user: {{post.comments}}
		<br>
	</div>
	
    </div>
    
 <script type="text/ng-template" id="/home.html">
      
        <h1>Movies</h1>
      <div id="logon" ng-app="movie" ng-controller="AuthCtrl">
	  <form ng-submit="LogOn()">
			<input type="text" id = "username" ng-model="username">input username</input>
	  <br>
			<input type="password" id = "password" ng-model="password">input password</input>
	  <br>
			<button type="submit">Log on</button>
	  </form>
	  <form ng-submit="register()">
			<button type="submit">Register</button>
	  </form>
	  <br>
      </div>
    </script>

<script type="text/ng-template" id="/log.html">
	<div ng-app="movie" ng-controller="MainCtrl">
      <form ng-submit="addMovie()">
        <h1>Logged on</h1>
		<form ng-submit="addPost()">
  		<input type="text" id= "title" ng-model="title">input movie title here</input>
		<br>
  		<input type="text" placeholder="Link" ng-model="link">input movie link here</input>
  		<br>
        <button type="submit">Add movie</button>
	</form>
	</div>
	<div ng-app="movie" ng-controller="AuthCtrl">
		<div id = "logoff">
			<form ng-submit="logOff()">
				<button type="submit">Log off</button>
			</form>
		</div>
	</div>
	<br>
	<div ng-app="movie" ng-controller="MainCtrl">
			<input type="text" ng-model="title2">title to delete or update</input>
			<br>
			<form ng-submit="delMovie()">
				<button type="submit">Delete</button>
			</form>
			<form ng-submit="upMovie()">
				<input type="text" ng-model="update">updated title</input>
				<button type="submit">Update</button>
			</form>
	</div>
	<br>
	<br>
    </script>
  
  </body>

</html>