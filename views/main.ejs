<html>
  <head>
    <title></title>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
   	<script src="../public/javascripts/angularapp.js"></script>
  </head>

  <body  ng-app="movie" ng-controller="MainCtrl">
    <div>
      {{test}}

	<div ng-repeat="post in posts | orderBy:'-upvotes'">
		<span ng-click="incrementUpvotes(post)">^</span>
		<a ng-show="post.link" href="{{post.link}}">
    		{{post.title}}
  		</a>
  		<span ng-hide="post.link">
    		{{post.title}}
  		</span>
  		- upvotes: {{post.upvotes}}
	</div>

	<form ng-submit="addPost()">
  		<input type="text" ng-model="title"></input>
		<br>
  		<input type="text" placeholder="Link" ng-model="link">input link here</input>
  		<br>
  		<button type="submit">Post</button>
	</form>

	<div ng-repeat="auth in auths">
		<span>
    	username: {{auth.username}}
  		</span>
        <br>
        password: {{auth.password}}
	</div>
    </div>
  </body>

</html>